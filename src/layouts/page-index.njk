{% include "header-index.njk" %}

  <main class="page-main" id="about">
    <div class="page-main__wrapper container">
      <h1 class="page-main__title">Артём Вафин, верстка и фронтенд.</h1>
    </div>
    <section class="page-main__about about container">
      <div class="about__wrapper">
        <picture class="about__box">
          <source media="(min-width: 768px)" type="image/webp" srcset="img/photo@1x.webp 1x, img/photo@2x.webp 2x, img/photo@3x.webp 3x">
          <source media="(min-width: 320px)" type="image/webp"
            srcset="img/photo_mobile@1x.webp 1x, img/photo_mobile@2x.webp 2x, img/photo_mobile@3x.webp 3x">
          <source media="(min-width: 768px)" srcset="img/photo@1x.jpg 1x, img/photo@2x.jpg 2x, img/photo@3x.jpg 3x">
          <img src="img/photo_mobile@1x.jpg" alt="Моё фото" class="about__img" src="img/photo_mobile@2x.jpg 2x, img/photo_mobile@3x.jpg 3x">
        </picture>
      </div>
      <div class="about__wrapper about__wrapper--text">
        <div class="about__content content">
          {{ content | safe }}
        </div>
      </div>
    </section>
    <section class="page-main__projects projects container" id="projects">
      <h2 class="projects__title title">Проекты</h2>
      <ul class="projects__list">

      {%- for card in collections.cards | reverse -%}
        <li class="projects__item">
          <a href="{{ card.url }}" class="projects__link">
            <picture>
              <source media="(min-width: 1300px)" type="image/webp"
                srcset="img/{{ card.data.img }}_desktop@1x.webp 1x, img/{{ card.data.img }}_desktop@2x.webp 2x">
              <source media="(min-width: 320px)" type="image/webp"
                srcset="img/{{ card.data.img }}_mobile@1x.webp 1x, img/{{ card.data.img }}_mobile@2x.webp 2x">
              <source media="(min-width: 1300px)"
                srcset="img/{{ card.data.img }}_desktop@1x.jpg 1x, img/{{ card.data.img }}_desktop@2x.jpg 2x">
              <img src="img/{{ card.data.img }}_mobile@1x.jpg" alt="Фото {{card.data.title}}" class="projects__img"
                srcset="img/{{ card.data.img }}_mobile@2x.jpg 2x">
            </picture>
          </a>
        </li>
      {%- endfor -%}

      </ul>
    </section>
  </main>

{% include "footer.njk" %}
